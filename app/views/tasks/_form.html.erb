<%= form_with(model: task) do |form| %>
  <%= form.hidden_field :parent_id, value: task.parent_id || params[:parent_id] %>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group col-3">
    <%= form.label :due_date%>
    <%= form.date_field :due_date, class: 'form-control' %>
  </div>

  <div class="form-group form-check col-5">
    <%= form.label :done, class:'form-check-label' %>
    <%= form.check_box :done, class:'form-check-input', type:'checkbox' %>
  </div>

  <%= form.submit class:'btn btn-success', date: {disable_with: 'Criando...'} %>

  <%= link_to 'Cancelar', tasks_path, class: 'btn btn-secondary'%>
<% end %>
